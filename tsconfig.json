{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "./",
        "outDir": "./dist/app",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"],
        "lib": ["es2018", "dom"],
        "paths": {
            // "@env/*": ["src/environments/*"]
        }
    },
    "include": ["src/client/**/*"]
}
