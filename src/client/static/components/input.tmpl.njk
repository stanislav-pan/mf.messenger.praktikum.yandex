{# 
    id: string;
    type: string;
    label: string;
    placeholder?: string;
    withPaddingTop?: boolean;
#}

{% macro input(id = '', name = '', type = 'text', label = '', placeholder = '', iconTemplate = '', withPaddingTop = false) %}
    {% set inputPaddingTopClass = '' %}

    {% if withPaddingTop %}
        {% set inputPaddingTopClass = 'input-b_default-pd_top' %}
    {% endif %}

    <div class="input-b {{inputPaddingTopClass}}">
        <label class="input-b__label">
            <span class="input-b__span">{{label}}</span>

            <div class="input-b__line">
                <input id="{{id}}" type="{{type}}" name="{{name}}" class="input-b__input" placeholder="{{placeholder}}" required="required">

                <div class="input-b__icon">
                    {% include iconTemplate %}
                </div>

                <div class="input-b__indicator"></div>
            </div>

        </label>
    </div>
{% endmacro %}